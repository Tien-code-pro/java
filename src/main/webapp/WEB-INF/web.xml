    <servlet-mapping>
        <servlet-name>EditAccountServlet</servlet-name>
        <url-pattern>/admin/account/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailAccountServlet</servlet-name>
        <servlet-class>com.assignment.assignment.controller.account.DetailAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailAccountServlet</servlet-name>
        <url-pattern>/admin/account/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>com.assignment.assignment.controller.account.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <url-pattern>/admin/account/delete</url-pattern>
    </servlet-mapping>

